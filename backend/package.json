{
  "name": "thoughtsheet-backend",
  "version": "0.1.0",
  "description": "The Node.js Express backend for Thoughtsheet: simple cloud-synced multiplatform notes app.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "start": "node ./build/index.js",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "start-local-db": "echo 'You must have installed `docker` and be in the `docker` group' && docker run -d --network=host --name mongo mongo"
  },
  "keywords": [
    "notes",
    "app"
  ],
  "author": "xtyrrell",
  "license": "MIT",
  "dependencies": {
    "@shelf/jest-mongodb": "^1.2.4",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^9.0.1",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-promise-router": "^4.1.0",
    "jest": "^26.6.3",
    "jsonwebtoken": "^8.5.1",
    "merge": "^2.1.1",
    "mongoose": "^5.12.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "uuid": "^8.3.2",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.4",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/express-jwt": "^6.0.1",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node-dev": "^1.1.6",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
